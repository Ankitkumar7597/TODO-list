<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TODO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h2 class="text-center">TODO APP</h2>

    <section id="datainput" class="mt-4">
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <form action="" method="post">
                        <table class="table">
                            <tr>
                                <th>Add task</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" name="task" id="" class="form form-control"
                                        placeholder="Enter your task" required>
                                </td>
                                <td>
                                    <select name="category" id="" class="form form-control" required>
                                        <option>Personal</option>
                                        <option>Work</option>
                                        <option>School</option>
                                        <option>Other</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="date" name="date" id="" class="form form-control" required>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-success">Add</button>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </section>

    <section id="datashow">
        <div class="container">
            <div class="row">
                <%record.reverse()%>
                <%record.forEach((result)=>{%>
                    <div class="col-md-3 mt-4">
                        <div class="card" style="width: 18rem;border-radius: 10%;" >
                            <div class="card-body" >
                                <p class="card-text" id="category"> Category : <%=result.category%>
                                </p>
                                <p class="card-text" id="date"> Date : <%=result.date%>
                                </p>
                                <h5 class="card-title">
                                    <%=result.task%>
                                </h5>
                                <p><span><a href="/delete/<%=result.id%>" class="btn btn-primary mt-2" id="delete">Delete</a></span>
                                    <span><a href="/edit/<%=result.id%>" class="btn btn-primary mt-2" id="edit">Edit</a></span>
                                </p>

                            </div>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>
    </section>

</body>

</html>